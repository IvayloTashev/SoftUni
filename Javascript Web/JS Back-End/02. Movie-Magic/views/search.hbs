<section id="search">
    <h1>Search</h1>
    <form method="get" class="form">
        <input type="text" class="search" name="search" placeholder="Title..." value="{{queryParams.search}}">
        <input type="text" name="genre" class="genre" placeholder="Genre..." value="{{queryParams.genre}}">
        <input type="number" name="year" class="year" placeholder="Year..." value="{{queryParams.year}}">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <div class="band">
        {{#each filter}}

        {{> movie}}

        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no movies matched...</p>
        </div>

        {{/each}}
    </div>
</section>